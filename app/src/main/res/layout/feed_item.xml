<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lv_bord">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/TxTitleFeed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxTitleFeed"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/IvPictureFeed"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:maxWidth="400dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/TxLinkFeed"
            android:layout_below="@+id/IvPictureFeed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="textUri"
            android:linksClickable="true"
            android:textStyle="bold"
            android:textSize="17dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/TxDescriptionFeed"
            android:layout_below="@+id/TxLinkFeed"
            android:layout_alignParentLeft="true"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/TxcaptionFeed"
            android:textSize="10dp"
            android:layout_below="@+id/TxDescriptionFeed"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
</RelativeLayout>