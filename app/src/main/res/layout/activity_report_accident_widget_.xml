<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activites.ReportAccident_widget_Activity"
    android:background="?attr/colorPrimaryDark">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxDescriptionWidget"
        android:minHeight="250dp"
        android:layout_above="@+id/BtSendWidget"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Description"
        android:gravity="start"
        android:textColorHint="#FFF"
        android:textIsSelectable="false"
        android:layout_margin="10dp"
        android:background="?attr/colorPrimaryDark"
        android:textColor="#FFF"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/BtSendWidget"
        android:background="#FFF"
        android:layout_alignParentBottom="true"
        android:textColor="?attr/colorPrimaryDark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:layout_above="@+id/TxDescriptionWidget"
        android:background="#FFF"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView20"
            android:layout_gravity="center"
            android:src="@drawable/accident"
            android:maxHeight="250dp"
            android:maxWidth="250dp" />
    </FrameLayout>

</RelativeLayout>
